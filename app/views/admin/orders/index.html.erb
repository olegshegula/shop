<%= render "shared/admin_panel" %>

<h3>List of orders</h3>

<table>
	<tr>
		<td><b>Order ID</b></td>
		<td><b>Buyer ID</b></td>
		<td><b>Confirmed?</b></td>
	</tr>
<% @orders.each do |t| %>
	<tr>
		<td><%= t.id %></td>
		<td><%= t.buyer_id %></td>
		<td><%= t.confirmed %></td>
		<td><%= link_to "More details", admin_order_path(t) %></td>
	</tr>
<% end %>
</table>
<br/>
<%= render "shared/main_page" %>