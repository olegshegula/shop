<%= render "shared/shop" %>
<%= render "shared/links" %>

<h3>List of products</h3>
<table>
	<tr>
		<td><b>Product</b></td>
		<td><b>Price</b></td>
	</tr>
<% @products.each do |p| %>
	<tr>
		<td><%= p.name %></td>
		<td><%= p.price/100.0 %>$</td>
		<td><%= link_to "More details about this product...", p %></td>
	</tr>
<% end %>
</table>
<%= link_to "Back to categories", root_path %>